<h1>Login</h1>
<div class='container'>
  <%= form_tag '/login' do %>
    <div class="row">
    <div class='col-12-xs'>
        Email: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= text_field_tag :email %>
    </div>
    <div class='col-12-xs'>
      Password: <%= password_field_tag :password %>
    </div>
  <%= submit_tag "Submit", :class => 'btn btn-primary', :style => 'margin-top: 1em' %>
  <% end %>
  </div>
</div>