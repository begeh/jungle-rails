<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td style="text-align: center;">
    <%= number_to_currency(product.price) %>
  </td>
  <td style="text-align: center;">
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td style="text-align: center;">
    <%= number_to_currency(product.price * quantity) %>
  </td>
</tr>
